<% include ../partials/header%>
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Edit comment</h1>
        </div>
        <div class="col-xs-12 col-md-4 col-lg-4">
            <form action="/courts/<%= court_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit!</button>
                </div>
                
            </form>
             <a href="/courts">Go back</a>
        </div>
       
    </div>
<% include ../partials/footer%>