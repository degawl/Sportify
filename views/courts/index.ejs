<% include ../partials/header %>
    <% if(currentUser && currentUser.isAdmin) { %>
        <h6>Admin rights enabled </h6>
    <% } %>
    <header class="jumbotron">
        <div class="container">
            <h1>Sportify Courts</h1>
         <p>Find the perfect spot!</p>
         <p>
             <a class="btn btn-info btn-lg" href="/courts/new">Add New Entry</a>
         </p>
         <p>
             <form action="/courts" method="GET" class="form-inline">
                 <div class="form-group"> 
                     <input type="text" id="fuzzySeachInput" name="search" placeholder="Search for..." class="form-control"> 
                     <input type="submit" value="Search" class="btn btn-default">
                 </div>
             </form>
         </p>
        </div>
     </header>
    
    <div class="row text-center">
        <div class="col-md-12">
            <% if(noMatch !== undefined) { %>
            <h3><%= noMatch %></h3>
            <% } %>
        </div>
        <% courts.forEach(function(court){ %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card">
                <img class="card-img-top" src="<%= court.image %>" alt="<%= court.name %>">
                <div class="card-body">
                    <h5 class="card-title"><%= court.name %></h5>
                    <a href="/courts/<%= court._id %>" class="btn btn-info">More Info</a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
<% include ../partials/footer%>