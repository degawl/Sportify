<% include ../partials/headerindex %>
<% include ../partials/headerstop %>
    <header>
        <div class="container-full-bg">
            <div class="jumbotron jumbotron-fluid">
                <div class="container indextext">
                    <h1 id="indextitle">Sportify Courts</h1>
                        <p><a class="btn btn-secondary btn-lg indexbtn" href="/courts/new">Add New Entry</a></p>
                </div>
            </div>
        </div>
     </header>
    <div class="container">
        <div class="row text-center">
            <div class="col-md-12">
                <% if(noMatch !== undefined) { %>
                <h3><%= noMatch %></h3>
                <% } %>
            </div>
            <% courts.forEach(function(court){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <img class="card-img-top" src="<%= court.image %>" alt="<%= court.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= court.name %></h5>
                        <a href="/courts/<%= court._id %>" class="btn btn-secondary">More Info</a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
    
<% include ../partials/footer%>