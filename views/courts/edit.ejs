<% include ../partials/header%>
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Edit <%= court.name %></h1>
        </div>
        <div class="col-xs-12 col-md-4 col-lg-4">
            <form action="/courts/<%= court._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="court[name]" value="<%= court.name %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="court[price]" value="<%= court.price %>" min="0.01" step="0.01"></input>
                </div> 
                <div class="form-group">
                    <input class="form-control" type="text" name="court[image]" value="<%= court.image %>"></input>
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="court[description]" value="<%= court.description %>"></input>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= court.location %>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit!</button>
                </div>
            </form>
             <a href="/courts">Go back</a>
        </div>
    </div>
<% include ../partials/footer%>